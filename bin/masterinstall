#!/usr/local/bin/bash

# REMEMBER TO INSTALL XCODE
xcode-select --install

# This installs Homebrew
echo Installing homebrew...
ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"

# Set up taps
echo '\nTapping taps...'
<~/dotfiles/installed-programs/brew-taps.txt xargs brew tap

# Install brew programs (terminal)
echo '\nInstalling brew programs...'
<~/dotfiles/installed-programs/brew-programs.txt xargs brew install

# Install brew cask programs (apps)
echo '\nInstalling brew cask programs...'
<~/dotfiles/installed-programs/brew-casks.txt xargs brew cask install

# Pyenv setup
pyenv install $python3version
pyenv rehash
pyenv install $python2version
pyenv rehash
pyenv global $python3version

# Install pip programs (python)
echo '\nInstalling pip3 programs...'
<~/dotfiles/installed-programs/pip2-programs.txt xargs pip install
echo Done

pyenv global $python2version
echo '\nInstalling pip2 programs...'
<~/dotfiles/installed-programs/pip3-programs.txt xargs pip install
echo Done

pyenv global $python3version
