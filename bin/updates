#!/usr/local/bin/bash
VE=`echo $VIRTUAL_ENV`
if [ -z $VE ]; then
	echo -e "\e[1;34mUpdating: \e[91mpip\e[0;37m"
	IFS=$'\n'
	echo  $'Getting outdated pip packages...'
	res=$(pip list -o)

	if [ -z "$res" ]; then
		echo $'All packages up to date.'
	else
		echo ""
		echo "$res"
		echo ""
		echo $'Updating packages...\n'
		for prog in `pip list -o`;do
			pip install --upgrade ${prog%\(*}
		done
	fi
	echo " "
	echo -e "\e[1;34mUpdating: \e[91mHomebrew\e[0;37m"
	brew update
	brew upgrade
	brew cleanup
	brew prune
	brew doctor
	mkmasterinstall
	echo " "
	echo -e "\e[1;34mDone"
else
	echo 'Exit virtualenv first'
fi
