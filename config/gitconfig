[core]
	editor = emacsclient -t
	excludesfile = ~/.gitignore
	pager = more
[credential]
	helper = osxkeychain
[alias]
	add-commit = !git add -A && git commit
	pusht = push
	eclipse = !git fetch upstream && git rebase -s recursive -X theirs upstream/master
	duplicate = "!f() { git clone --bare $1 temp_clone && cd temp_clone && git push --mirror $2 && cd .. && rm -rf temp_clone && git clone $2 $(basename $1);  }; f"
	myrebase = rebase -s recursive -X theirs
	mypull = pull -s recursive -X ours
[http]
	postBuffer = 524288000
[color]
	ui = never
[push]
	followTags = true
