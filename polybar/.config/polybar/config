; -*- mode: conf-windows -*-
[colors]
black = #282828
white = #FDF4C1
green = #B8BB26
red = #FB4933
yellow = #FABD2F
blue = #83A598
purple = #D3869B
aqua = #8EC07C
orange = #FE8019
cyan = #3FD7E5
sienna = #DD6F48
light3 = #BDAE93
light4 = #A89984
dark2 = #504945

background = ${colors.black}
foreground = ${colors.white}
alert = ${colors.red}
comment = #665C54

[bar/simple]
monitor = ${env:MONITOR:eDP-1}
width = 100%
height = 47
fixed-center = true
line-size = 2

dpi = 210
background = ${colors.background}
foreground = ${colors.foreground}

module-margin=0
separator=

font-0 = Iosevka Term:size=8;3

modules-left = bspwm xwindow
modules-center = date
modules-right = backlight pulse packages bluez network battery hamburger

wm-restack = bspwm

cursor-click = pointer
cursor-scroll = ns-resize
enable-ipc = true

[module/xwindow]
type = internal/xwindow
label-maxlen =  85
format-padding=1
format = %{A1:rofi -show window -location 1 -xoffset 15&:}<label>%{A}

[module/display]
type=custom/script
exec=[ "$(xrandr 2>/dev/null | grep ' connected ' | wc -l)" -gt "1" ] && echo " [__] " || echo ''
format-padding=1
click-left=~/.config/polybar/blocks/mons-rofi

[module/bspwm]
type = internal/bspwm
format =<label-state> <label-mode>
format-underline = ${colors.sienna}
format-padding=1
wrapping-scroll = false
enable-click = false
enable-scroll = false
reverse-scroll = false

pin-workspaces = true
label-focused = ●
; label-focused-underline = ${colors.sienna}
; label-focused-padding = 1
; label-focused-foreground = ${colors.sienna}
; label-monocle-foreground=${colors.sienna}
label-monocle= M

label-occupied = ●
label-occupied-foreground = ${colors.comment}

label-urgent = ●
; label-urgent-background = ${colors.alert}
label-urgent-foreground = ${colors.alert}
; label-urgent-padding = 1

label-empty = ○
label-empty-foreground = ${colors.comment}

[module/network]
type = internal/network
interface = wlan0
format-connected = %{A1:networkmanager_dmenu&:}<ramp-signal>%{A}

; ramp-signal-0 = %{F#665C54}⣠⣴⣾
; ramp-signal-1 = ⣠%{F#665C54}⣴⣾
; ramp-signal-2 = ⣠⣴%{F#665C54}⣾
; ramp-signal-3 = ⣠⣴⣾
ramp-signal-0 = ⡀
ramp-signal-1 = ⣠
ramp-signal-2 = ⣠⡆
ramp-signal-3 = ⣠⣾

format-disconnected = %{A1:networkmanager_dmenu&:}<label-disconnected>%{A}
label-disconnected =⣀⣀⣀
label-disconnected-foreground = ${colors.red}
; format-foreground = ${colors.blue}
; format-underline = ${colors.blue}
format-disconnected-padding =1
format-connected-padding = 1
interval = 2

[module/bluez]
click-left = ~/.config/polybar/blocks/bluez-rofi &
type = custom/script
exec = ~/.config/polybar/blocks/bluez
format-padding=1
interval = 2

[module/date]
type = internal/date
; format-underline = ${colors.blue}
label = %date%
format = %{A3:~/.config/polybar/blocks/cal-rofi &:}<label>%{A}
date = %a %H:%M
date-alt = %a %H:%M %b %d
interval = 2
format-padding=1

[module/packages]
type = custom/script
exec = checkupdates | wc -l
label = ↑ %output%
exec-if = checkupdates
interval = 600
format-padding = 1

[module/cpu]
type = internal/cpu
format-foreground = ${colors.comment}
format-padding = 1
format = <label>
label = cpu %percentage:2%%

[module/mem]
type = internal/memory
format = <label>
label = mem %percentage_used:2%%
format-foreground = ${colors.comment}
format-padding=1

[module/weather]
type = custom/script
exec = ~/.config/polybar/blocks/openweathermap.scm
; format-foreground = ${colors.sienna}
; format-underline = ${colors.sienna}
format-padding = 1
click-middle = xdg-open https://darksky.net
; click-left = ~/.config/polybar/blocks/darksky-rofi hourly
; click-right = ~/.config/polybar/blocks/darksky-rofi daily
interval = 120
label-font = 1

[module/battery]
type=custom/script
exec = ~/.config/polybar/blocks/battery-average
; format-foreground = ${colors.blue}
; format-underline = ${colors.blue}
format-padding = 1
interval=30

[module/pulse]
hidden=true
type=internal/pulseaudio
format-volume = Volume: <bar-volume> <label-volume>
label-volume = %percentage%
label-muted = %percentage%
format-muted = Volume: <bar-volume> <label-muted>
format-muted-foreground = ${colors.comment}
format-volume-padding = 1
format-muted-padding = 1

; Only applies if <bar-volume> is used
bar-volume-width = 6
bar-volume-indicator =
bar-volume-fill = ━
bar-volume-empty =%{F#665C54}┉%{F-}
bar-volume-gradient=true

[module/backlight]
hidden=true
type = internal/backlight
card = intel_backlight
format = Backlight: <bar> <label>
label = %percentage%
format-padding = 1

bar-width = 6
bar-indicator =
bar-fill = ━
bar-empty =%{F#665C54}┉
bar-gradient=true

[module/hamburger]
type = custom/script
exec = echo "☰"
format-padding = 1
click-left = wm-exit-dmenu
format-underline = ${colors.sienna}

[settings]
screenchange-reload = true